@page
@model ICBFApp.Pages.Rol.EditModel
@{
    ViewData["Title"] = "Editar Roles";
}

<br />
<h2 class="text-center">Editar Rol</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}

<form method="POST">
    <input type="hidden" class="form-control" name="idRol" value="@Model.rolInfo.idRol" />

    <div class="container">
        <div class="row mb-3 justify-content-center">
            <div class="col-sm-10">
                <label class="col-form-label" for="nombre">Nombre Rol:</label>
                <input type="text" class="form-control" pattern="[A-Za-zÁÉÍÓÚáéíóúüÜñÑ\s]+" id="nombre" name="nombre" value="@Model.rolInfo.nombre.Trim()">
            </div>
        </div>

        <div class="row mb-3">
            <div class="offset-sm-3 col-sm-3 d-grid">
                <button type="submit" class="btn btn-primary">Editar</button>
            </div>
            <div class="col-sm-3 d-grid">
                <a class="btn btn-outline-danger" href="/Rol/Index" role="button">Cancelar</a>
            </div>
        </div>
    </div>
</form>